<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>showcontent</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Custom Google font-->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@100;200;300;400;500;600;700;800;900&amp;display=swap" rel="stylesheet" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="css/styles.css" rel="stylesheet" />
</head>
<body class="d-flex flex-column">
    <main class="flex-shrink-0">
        <!-- 네비게이션 -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white py-3">
            <div class="container px-5">
                <a class="navbar-brand" href="/"><span class="fw-bolder text-primary">SNS content</span></a>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ms-auto mb-2 mb-lg-0 small fw-bolder">
                        <a href="/" class="btn btn-primary"onclick = "return confirm('메인페이지로 이동하시겠습니까?')">메인페이지로 이동</a>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- 페이지 내용 -->
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- 게시물 목록 -->
                    <h2>게시물</h2>
                    <% data.forEach(function(row, index) { %>
                        <div class="card mb-3">
                            <div class="card-header">
                                <strong>번호:</strong> <%= index + 1 %> <strong>&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp제목:</strong><%= row.title %>                                
                            </div>
                            <div class="card-body">
                                <p class="card-text"><strong>작성자:</strong> <%= row.username %></p>
                                <img src="/assignment/upload/<%=row.username%>.jpg" alt="이미지" class="img-fluid">
                                <p class="card-text"><strong>내용:</strong> <%= row.content %></p>
                            </div>
                            </div>
                            <% if(role == 1) { %>
                                <div class="card-footer">
                                    <a href="/showcontent/<%= row.username %>/edit" class="btn btn-warning btn-sm" 
                                        onclick = "return confirm('수정하시겠습니까?')">수정</a>
                                    <a href="/showcontent/<%= row.username %>/delete" class="btn btn-warning btn-sm" 
                                        onclick = "return confirm('삭제하시겠습니까?')">삭제</a>
                                </div>
                            <% } %>
                        </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </main>
</body>
</html>